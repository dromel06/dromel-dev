---
import Image from "astro/components/Image.astro";
import imgRobot from "../assets/imgs/robot.png";
import iconGitHub from "../assets/icons/github.svg";
import iconInstagram from "../assets/icons/instagram.svg";
import iconLinkedIn from "../assets/icons/linkedin.svg";

const socials = [
    {
        name: "GitHub",
        href: "https://github.com/dromel06",
        icon: iconGitHub,
        aria: "GitHub",
    },
    {
        name: "Instagram",
        href: "https://instagram.com/dromel06",
        icon: iconInstagram,
        aria: "Instagram",
    },
    {
        name: "LinkedIn",
        href: "https://www.linkedin.com/in/dromel/",
        icon: iconLinkedIn,
        aria: "LinkedIn",
    },
];
---

<section class="w-screen px-8 mt-8 mb-20 justify-center lg:max-w-6xl mx-auto">
    <div class="flex flex-col gap-2">
        <div class="relative mb-8">
            <div
                class="absolute top-0 left-1/2 transform -translate-x-1/2 bg-primary text-lighten inline-block px-6 py-3 rounded-full text-3xl z-1 border-4 border-darken"
            >
                <h1
                    class="text-xl lg:text-3xl text-shadow-accent text-shadow-2xs text-nowrap"
                >
                    DROMEL DEV
                </h1>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-2">
            <div
                class="relative flex-1 bg-secondary flex items-center rounded-[30px] h-[200px] shadow-secondary shadow-md"
            >
                <div>
                    <Image
                        src={imgRobot}
                        alt="Robot"
                        class="absolute bottom-0 left-0 -scale-x-100 rounded-br-[25px] drop-shadow-2xl drop-shadow-zinc-950 w-28 md:w-50"
                    />
                </div>
                <div
                    class="text-lighten px-4 py-2 text-2xl lg:text-center text-end w-full drop-shadow-zinc-950 drop-shadow-2xl"
                >
                    Hello, <br />I'm <span
                        class="text-3xl font-bold text-accent"
                    >
                        Diomedes <br />
                    </span>Software Developer.
                </div>
            </div>

            <div
                class="relative flex-1 bg-gray-400 flex items-center rounded-[30px] h-[200px] shadow-grayish shadow-md justify-between"
            >
                <div
                    class="w-full flex flex-col justify-around items-center p-4"
                >
                    <div
                        class="text-lighten px-4 py-2 text-xl text-start lg:text-center w-full drop-shadow-zinc-950 drop-shadow-xl"
                    >
                        I create <br /><span
                            class="text-2xl font-bold text-accent"
                            >web applications</span
                        >, <br />mobile applications and more.
                    </div>
                </div>
                <div class="flex flex-col items-center gap-3 px-4">
                    <div class="flex flex-col gap-3 items-center">
                        {
                            socials.map((s) => (
                                <a
                                    href={s.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    aria-label={s.aria}
                                    class="bg-darken hover:bg-accent transition p-1 rounded-full "
                                >
                                    <Image
                                        src={s.icon}
                                        alt={s.aria}
                                        format="svg"
                                        loading="eager"
                                        class="w-10"
                                    />
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="relative">
            <div
                class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 border-4 border-darken rounded-[30px] bg-darken z-1"
            >
                <a href="#contact" class="no-underline">
                    <div
                        class="bg-secondary text-lighten px-8 py-2 rounded-[25px] text-xl z-1 hover:bg-accent hover:text-darken cursor-pointer transition duration-300 shadow-md shadow-secondary hover:shadow-accent"
                    >
                        Contactar
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
